rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -----------------------
    // Common helper functions
    // -----------------------
    function isSignedIn() {
      return request.auth != null;
    }

    // Check if the current user is the creator of a team
    function isTeamCreator(teamId) {
      // only true if the team doc exists and createdBy matches
      let t = get(/databases/$(database)/documents/teams/$(teamId));
      return isSignedIn()
             && t.exists()
             && t.data.createdBy == request.auth.uid;
    }

    // Get the membership document for the current user in a team
    function myMembership(teamId) {
      return get(/databases/$(database)/documents/teams/$(teamId)/members/$(request.auth.uid));
    }

    // Is current user an approved admin in this team?
    function isTeamAdmin(teamId) {
      let m = myMembership(teamId);
      return isSignedIn()
             && m.exists()
             && m.data.role == "admin"
             && m.data.status == "approved";
    }

    // Is current user an approved member (any role) in this team?
    function isApprovedMember(teamId) {
      let m = myMembership(teamId);
      return isSignedIn()
             && m.exists()
             && m.data.status == "approved";
    }

    // -----------------------
    // USER PROFILE
    // -----------------------
    match /users/{userId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update, delete: if request.auth != null
                           && request.auth.uid == userId
                           && request.auth.token.email_verified == true;
    }

    // -----------------------
    // JOURNALS
    // users/{userId}/journals/{dateId}
    // -----------------------
    match /users/{userId}/journals/{dateId} {
      allow read: if request.auth != null && request.auth.uid == userId;

      allow create: if request.auth != null
                    && request.auth.uid == userId
                    && request.resource.data.keys().hasAny(['mood'])
                    && request.resource.data.mood is string
                    && request.resource.data.keys().hasAny(['date'])
                    && request.resource.data.date is string
                    && request.resource.data.date == dateId;

      allow update: if request.auth != null
                    && request.auth.uid == userId
                    && request.resource.data.mood is string
                    && request.resource.data.date is string
                    && request.resource.data.date == dateId;

      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // -----------------------
    // WATER INTAKE
    // users/{userId}/waterIntake/{dateId}
    // -----------------------
    match /users/{userId}/waterIntake/{dateId} {
      allow read: if request.auth != null && request.auth.uid == userId;

      allow create: if request.auth != null
                    && request.auth.uid == userId
                    && request.resource.data.keys().hasAny(['date'])
                    && request.resource.data.date is string
                    && request.resource.data.date == dateId
                    && request.resource.data.keys().hasAny(['glasses'])
                    && (request.resource.data.glasses is int
                        || request.resource.data.glasses is float
                        || request.resource.data.glasses is string);

      allow update: if request.auth != null
                    && request.auth.uid == userId
                    && request.resource.data.date is string
                    && request.resource.data.date == dateId
                    && request.resource.data.keys().hasAny(['glasses'])
                    && (request.resource.data.glasses is int
                        || request.resource.data.glasses is float
                        || request.resource.data.glasses is string);

      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // -----------------------
    // NUTRITION LOGS
    // nutritionLogs/{userId}/{dateId}/{logId}
    // -----------------------
    match /nutritionLogs/{userId}/{dateId}/{logId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // -----------------------
    // TEAMS (root collection)
    // teams/{teamId}
    // -----------------------
    match /teams/{teamId} {
      allow read: if true;

      allow create: if isSignedIn()
                    && request.resource.data.createdBy == request.auth.uid
                    && request.resource.data.name is string
                    && request.resource.data.name.size() > 0
                    && request.resource.data.inviteCode is string;

      allow update, delete: if false;
    }

    // -----------------------
    // TEAM MEMBERSHIPS
    // teams/{teamId}/members/{memberId}
    // memberId = userId
    // -----------------------
    match /teams/{teamId}/members/{memberId} {
      // READ:
      allow read: if isTeamAdmin(teamId)
                  || isApprovedMember(teamId)
                  || (isSignedIn() && memberId == request.auth.uid);

      // CREATE:
      // - only for themselves (memberId == auth.uid)
      // - creator should be able to create admin+approved for themself even if team doc is not yet visible to rules
      // - normal users can only create member+pending
      allow create: if isSignedIn()
              && memberId == request.auth.uid
              && request.resource.data.userId == request.auth.uid
              && request.resource.data.teamId == teamId
              && request.resource.data.role in ["member", "admin"]
              && request.resource.data.status in ["pending", "approved"]
              && (
                // allow creator to create admin+approved for themselves
                (
                  request.resource.data.role == "admin" &&
                  request.resource.data.status == "approved"
                )
                ||
                (
                  request.resource.data.role == "member" &&
                  request.resource.data.status == "pending"
                )
              );


      // UPDATE:
      allow update: if isTeamAdmin(teamId)
                    && request.resource.data.userId == resource.data.userId
                    && request.resource.data.teamId == resource.data.teamId
                    && request.resource.data.role == resource.data.role;

      // DELETE:
      allow delete: if isTeamAdmin(teamId)
                    || (isSignedIn() && memberId == request.auth.uid);
    }

    // -----------------------
    // Default fallback
    // -----------------------
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.auth.token.email_verified == true;
    }
  }
}
